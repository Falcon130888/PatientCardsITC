@model IEnumerable<PatientCardsITC.Models.Position>

@{
    ViewData["Title"] = "Index";
}
<h1>Должности</h1>
@section scripts{
    <script src="~/js/Position.js" type="text/javascript"></script>
}

<div id="modal-placeholder"></div>

<div id="createForm"></div>
<p> @Html.ActionLink("Добавить", "Create", "Positions", new { }, new { @class = "viewDialog", data_dialog_title = "Создание модели" })</p>

<button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-contact" data-url="@Url.Action("Create")">
    Добавить должность
</button>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionName)
                </td>
                <td>
                    <a asp-action="Edit" class="viewDialog" asp-route-id="@item.PositionId">Изменить</a> |
                    <a asp-action="Details" class="viewDialog" asp-route-id="@item.PositionId">Детали</a> |
                    <a asp-action="Delete" class="viewDialog" asp-route-id="@item.PositionId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
