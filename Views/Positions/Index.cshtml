@model IEnumerable<PatientCardsITC.Models.Position>

@{
    ViewData["Title"] = "Index";
}
<h1>Должности</h1>
@section scripts{
    <script src="~/js/Position.js" type="text/javascript"></script>
}
    <div id="createForm"></div>

    <p> @Html.ActionLink("Добавить", null, "Positions", new { }, new { @id = "searching", @class="From-control", data_dialog_title = "Создание модели" })</p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PostionName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostionName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="viewDialog" asp-route-id="@item.PositionId">Edit</a> |
                        <a asp-action="Details" class="viewDialog" asp-route-id="@item.PositionId">Details</a> |
                        <a asp-action="Delete" class="viewDialog" asp-route-id="@item.PositionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
