@model IEnumerable<PatientCardsITC.Models.Position>

@{
    ViewData["Title"] = "Index";
}
<h1>Должности</h1>

<div id="modal-placeholder"></div>
<div id="createForm"></div>
<p> @Html.ActionLink("Добавить", "Create", "Positions", new { }, new { @id = "add", data_dialog_title = "Создание модели" })</p>

@*<button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-contact" data-url="@Url.Action("Create")">
    Добавить должность
</button>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionName)
                </td>
                <td>
                    <button type="button" class="btn-link" data-toggle="ajax-modal" data-target="#add-contact" data-url="@Url.Action("Edit", "Positions", new { id = @item.PositionId}) ">
                        Изменить
                    </button>
                    <a asp-action="Edit" class="viewDialog" asp-route-id="@item.PositionId">Изменить</a> |
                    <a asp-action="Details" class="viewDialog" asp-route-id="@item.PositionId">Детали</a> |
                    <a asp-action="Delete" class="viewDialog" asp-route-id="@item.PositionId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
   $(document).ready(function () {

        $.ajaxSetup({ cache: false });

       $('#add').on('click', function(e) {
            e.preventDefault();
            $("<div id='dialogContent'></div>")
                .addClass("dialog")
                .appendTo("body")
                .load(this.href)
                .dialog({
                    title: $(this).attr("data-dialog-title"),
                    close: function () { $(this).remove() },
                    modal: true,
                    buttons: {
                        "Выпонить": function () {
                            $.ajax({
                             url: "@Url.Action("Create", "Positions")",
                             type: "POST",
                             data: $('form').serialize(),
                             datatype: "json",
                             success: function (result) {

                                 $("#dialogContent").html(result);
                                }
                            });
                        }
                    }
                });
       });

           $(".viewDialog").on("click", function (e) {
        e.preventDefault();

        $("<div></div>")
            .addClass("dialog")
            .appendTo("body")
            .dialog({
                title: $(this).attr("data-dialog-title"),
                close: function () { $(this).remove() },
                modal: true
            })
            .load(this.href);
    });
    });
    </script>
}
